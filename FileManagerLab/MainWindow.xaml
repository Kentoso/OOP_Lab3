        <t:TabDataTemplateSelector x:Key="TabDataTemplateSelector" />
        <DataTemplate DataType="{x:Type t:ByteFileTab}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <ComboBox ItemsSource="{Binding ByteNSOptions}" SelectedItem="{Binding CurrentNS}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding RegenerateContentCommand}" PassEventArgsToCommand="True" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                </StackPanel>

                <TextBox
                    IsReadOnly="True"
                    IsReadOnlyCaretVisible="False"
                    Text="{Binding Content}"
                    TextWrapping="Wrap" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type t:TextFileTab}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                    <Button Command="{Binding SaveFileCommand}">Save file</Button>
                </StackPanel>
                <TextBox
                    AcceptsReturn="True"
                    Text="{Binding Content}"
                    TextWrapping="Wrap" />
            </DockPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type t:FileManagerTab}">
            <DockPanel DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=DataContext}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <v:FileManager
                        CreateFolderCommand="{Binding LeftHierarchyCreateFolderCommand}"
                        DeleteFolderCommand="{Binding LeftHierarchyDeleteFolderCommand}"
                        GoUpHierarchyCommand="{Binding GoUpLeftHierarchyCommand}"
                        Hierarchy="{Binding LeftHierarchy}"
                        HierarchyMouseClickCommand="{Binding LeftHierarchyMouseClickCommand}"
                        HierarchySelectItemCommand="{Binding LeftHierarchySelectItemCommand}"
                        SelectedItem="{Binding LeftHierarchySelectedItem}" />
                    <Grid Background="LightGray" Grid.Column="1" />
                    <v:FileManager
                        CreateFolderCommand="{Binding RightHierarchyCreateFolderCommand}"
                        GoUpHierarchyCommand="{Binding GoUpRightHierarchyCommand}"
                        Grid.Column="2"
                        Hierarchy="{Binding RightHierarchy}"
                        HierarchyMouseClickCommand="{Binding RightHierarchyMouseClickCommand}"
                        HierarchySelectItemCommand="{Binding RightHierarchySelectItemCommand}"
                        SelectedItem="{Binding RightHierarchySelectedItem}" />

                </Grid>
            </DockPanel>
